@model MyProject.Models.Models.Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col=12 text-center">
                <h2 class="text-white py-2">Edit Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <form method="post">
          
            <input asp-for="Id" hidden />
            <div class=" border p-3 mt-4">

                <div class="form-floating py-3 col-12">
                    <input asp-for="Title" type="text" class="form-control border-0 shadow " />
                    <label asp-for="Title" class="m-2"> </label>

                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 col-12">
                    <textarea asp-for="Description" type="text" class="form-control border-0 shadow "></textarea>
                    <label asp-for="Description" class="m-2"> </label>

                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 col-12">
                    <input asp-for="ISBN" type="text" class="form-control border-0 shadow " />
                    <label asp-for="ISBN" class="m-2"> </label>

                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 col-12">
                    <input asp-for="Author" type="text" class="form-control border-0 shadow " />
                    <label asp-for="Author" class="m-2"> </label>

                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <div class="form-floating py-3 col-12">
                    <input asp-for="ListPrice" type="number" class="form-control border-0 shadow " />
                    <label asp-for="ListPrice" class="m-2"> </label>

                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 col-12">
                    <input asp-for="Price" type="number" class="form-control border-0 shadow " />
                    <label asp-for="Price" class="m-2"> </label>

                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 col-12">
                    <input asp-for="Price50" type="number" class="form-control border-0 shadow " />
                    <label asp-for="Price50" class="m-2"> </label>

                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 col-12">
                    <input asp-for="Price100" type="number" class="form-control border-0 shadow " />
                    <label asp-for="Price100" class="m-2"> </label>

                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Edit</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">
                            Back To List
                        </a>
                    </div>
                </div>
            </div>

        </form>

    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
